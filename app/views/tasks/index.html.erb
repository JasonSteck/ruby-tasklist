<h1>Your tasks</h1>
 
<br>
<%= link_to 'New task', new_task_path, :class=>'btn btn-min btn-primary' %>

<br><br>

<!-- display all tasks in a table -->
<table data-resizable-columns-id="tasks-table" class="table">
  <tr>
    <th data-resizable-column-id="done"></th>
    <th data-resizable-column-id="name">Name</th>
    <th data-resizable-column-id="category">Category</th>
    <th data-resizable-column-id="description">Description</th>
    <th data-resizable-column-id="functions" colspan="2"></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr id="<%= task.id %>">
      <td class="center"><%= check_box_tag 'completedCheckbox', "1", task.isComplete, :id => "completedCheckbox_#{task.id}", class: 'completedCheckbox' %></td>
      <td><%= task.name %></td>
      <td><%= task.category %></td>
      <td><%= task.description %></td>
      <td><%= link_to 'Edit', edit_task_path(task), :class=>'btn btn-sm btn-primary' %></td>
      <td><%= link_to 'Delete', task_path(task), :class=>'btn btn-sm btn-primary',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
